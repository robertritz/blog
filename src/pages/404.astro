---
import BaseHead from "../components/BaseHead.astro"
import LanguageSwitcher from "../components/LanguageSwitcher.astro"
import SystemTheme from "../components/SystemTheme.astro"
import { siteConfig } from "../config"
import { t } from "../i18n/utils"

const currentLang = "en" // Default to English for 404 pages
---

<!doctype html>
<html lang={currentLang}>
  <head>
    <BaseHead
      title={t("error.404_title", currentLang)}
      description={t("error.404_heading", currentLang)}
    />
  </head>
  <body>
    <SystemTheme />
    <main>
      <div class="language-switcher-wrapper">
        <LanguageSwitcher currentLang={currentLang} />
      </div>
      <div class="error-page">
        <h1>404</h1>
        <h2>{t("error.404_heading", currentLang)}</h2>
        <p>{t("error.404_message", currentLang)}</p>
        <a href={`/${currentLang}/`} class="home-link">{t("error.back_home", currentLang)}</a>
      </div>
    </main>
  </body>
</html>

<style>
  body {
    font-family:
      -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue",
      Arial, sans-serif;
    line-height: 1.6;
    color: #111;
    background: #fff;
    margin: 0;
    padding: 0;
    transition:
      color 0.2s ease,
      background-color 0.2s ease;
  }

  [data-theme="dark"] body {
    color: #f5f5f5;
    background: #0a0a0a;
  }

  main {
    max-width: 800px;
    margin: 0 auto;
    padding: 60px 20px;
  }

  .language-switcher-wrapper {
    display: flex;
    justify-content: center;
    margin-bottom: 40px;
  }

  .error-page {
    text-align: center;
    padding: 60px 0;
  }

  .error-page h1 {
    font-size: 120px;
    font-weight: 700;
    margin: 0 0 20px 0;
    color: #111;
    line-height: 1;
  }

  [data-theme="dark"] .error-page h1 {
    color: #f5f5f5;
  }

  .error-page h2 {
    font-size: 32px;
    font-weight: 600;
    margin: 0 0 20px 0;
    color: #111;
  }

  [data-theme="dark"] .error-page h2 {
    color: #f5f5f5;
  }

  .error-page p {
    font-size: 18px;
    color: #666;
    margin: 0 0 40px 0;
  }

  [data-theme="dark"] .error-page p {
    color: #999;
  }

  .home-link {
    color: #111;
    text-decoration: underline;
    font-size: 16px;
  }

  [data-theme="dark"] .home-link {
    color: #f5f5f5;
  }

  @media (max-width: 768px) {
    main {
      padding: 40px 20px;
    }

    .error-page h1 {
      font-size: 80px;
    }

    .error-page h2 {
      font-size: 24px;
    }

    .error-page p {
      font-size: 16px;
    }
  }
</style>
