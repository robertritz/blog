---
import { type CollectionEntry, getCollection } from "astro:content"
import BaseHead from "../../components/BaseHead.astro"
import FormattedDate from "../../components/FormattedDate.astro"
import SiteHeader from "../../components/SiteHeader.astro"
import { siteConfig } from "../../config"

export async function getStaticPaths() {
  const posts = await getCollection("posts")

  return posts.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }))
}

type Props = CollectionEntry<"posts">

const post = Astro.props
const { Content } = await post.render()
---

<!doctype html>
<html lang="en" id="top">
  <head>
    <BaseHead
      title={`${post.data.title} | ${siteConfig.siteName}`}
      description={post.data.description}
    />
  </head>
  <body>
    <!-- Header - fixed with SiteHeader component -->
    <div class="fixed-header">
      <div class="header-inner">
        <SiteHeader showNav={false} />
      </div>
    </div>

    <!-- Main Content -->
    <main>
      <article class="post">
        <header class="post-meta">
          <h1>{post.data.title}</h1>
          {
            post.data.description && (
              <p class="subtitle">{post.data.description}</p>
            )
          }
          <time><FormattedDate date={post.data.pubDate} /></time>
        </header>

        <div class="content">
          <Content />
        </div>

        <footer class="post-footer">
          <a href="#top" class="back-to-top">Back to top</a>
        </footer>
      </article>
    </main>
  </body>
</html>

<style>
  /* Base styles - matching Dario's exact colors */
  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  html {
    overflow-x: hidden;
  }

  body {
    font-family:
      "Inter",
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      sans-serif;
    line-height: 1.6;
    color: #1f1e1d;
    background: #fafafa;
    margin: 0;
    padding: 0;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    overflow-x: hidden;
    width: 100%;
  }

  [data-theme="dark"] body {
    color: #e5e5e5;
    background: #1a1a1a;
  }

  /* Fixed header wrapper */
  .fixed-header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background: #fafafa;
    z-index: 90;
    padding: 24px;
  }

  [data-theme="dark"] .fixed-header {
    background: #1a1a1a;
  }

  .header-inner {
    max-width: 680px;
    margin: 0 auto;
    padding: 0 24px;
  }

  .header-inner :global(.site-header) {
    margin-bottom: 0;
  }

  /* Main content */
  main {
    width: 100%;
    max-width: 680px;
    margin: 0 auto;
    padding: 120px 24px 80px;
    overflow-wrap: break-word;
    word-wrap: break-word;
  }

  .post-meta {
    margin-bottom: 40px;
  }

  .post-meta h1 {
    font-family: "Times New Roman", Times, Georgia, serif;
    font-size: 62px;
    font-weight: 700;
    margin: 0 0 16px 0;
    line-height: 1.08;
    color: #1f1e1d;
    letter-spacing: -0.01em;
    overflow-wrap: break-word;
    word-wrap: break-word;
  }

  [data-theme="dark"] .post-meta h1 {
    color: #e5e5e5;
  }

  .subtitle {
    font-family: "Times New Roman", Times, Georgia, serif;
    font-size: 22px;
    font-style: italic;
    font-weight: 400;
    color: #1f1e1d;
    margin: 0 0 20px 0;
    line-height: 1.4;
  }

  [data-theme="dark"] .subtitle {
    color: #ccc;
  }

  .post-meta time {
    font-family:
      "Inter",
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      sans-serif;
    font-size: 15px;
    color: #666;
  }

  [data-theme="dark"] .post-meta time {
    color: #888;
  }

  /* Content */
  .content {
    font-family:
      "Inter",
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      sans-serif;
    font-size: 17px;
    line-height: 1.7;
    color: #1f1e1d;
  }

  [data-theme="dark"] .content {
    color: #ddd;
  }

  .content p {
    margin: 0 0 24px 0;
  }

  .content h2 {
    font-family: "Times New Roman", Times, Georgia, serif;
    font-size: 32px;
    font-weight: 700;
    margin: 56px 0 24px 0;
    line-height: 1.2;
    color: #1f1e1d;
    scroll-margin-top: 100px;
  }

  [data-theme="dark"] .content h2 {
    color: #e5e5e5;
  }

  .content h3 {
    font-family: "Times New Roman", Times, Georgia, serif;
    font-size: 24px;
    font-weight: 700;
    margin: 40px 0 16px 0;
    line-height: 1.3;
    color: #1f1e1d;
    scroll-margin-top: 100px;
  }

  [data-theme="dark"] .content h3 {
    color: #e5e5e5;
  }

  .content a {
    color: #1f1e1d;
    text-decoration: underline;
    text-underline-offset: 3px;
    text-decoration-thickness: 1px;
  }

  .content a:hover {
    text-decoration-thickness: 2px;
  }

  [data-theme="dark"] .content a {
    color: #e5e5e5;
  }

  .content blockquote {
    border-left: 4px solid #1f1e1d !important;
    padding-left: 24px;
    margin: 32px 0;
    font-style: italic;
    color: #1f1e1d;
  }

  [data-theme="dark"] .content blockquote {
    border-left-color: #666;
    color: #ccc;
  }

  .content code {
    background: rgba(0, 0, 0, 0.06);
    padding: 3px 6px;
    border-radius: 4px;
    font-size: 15px;
    font-family:
      "SFMono-Regular", Consolas, "Liberation Mono", Menlo, monospace;
  }

  [data-theme="dark"] .content code {
    background: rgba(255, 255, 255, 0.1);
    color: #e5e5e5;
  }

  .content pre {
    background: rgba(0, 0, 0, 0.06);
    padding: 20px;
    border-radius: 8px;
    overflow-x: auto;
    margin: 32px 0;
  }

  [data-theme="dark"] .content pre {
    background: rgba(255, 255, 255, 0.06);
  }

  .content pre code {
    background: none;
    padding: 0;
    color: inherit;
  }

  .content ul,
  .content ol {
    margin: 24px 0;
    padding-left: 24px;
  }

  .content li {
    margin: 8px 0;
  }

  .content img {
    max-width: 100%;
    height: auto;
    margin: 32px 0;
  }

  /* Post footer */
  .post-footer {
    margin-top: 80px;
    text-align: center;
  }

  .back-to-top {
    font-family:
      "Inter",
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      sans-serif;
    font-size: 15px;
    color: #1f1e1d;
    text-decoration: underline;
    text-underline-offset: 3px;
  }

  [data-theme="dark"] .back-to-top {
    color: #e5e5e5;
  }

  /* Tablet */
  @media (max-width: 1100px) {
    .fixed-header {
      padding: 20px 24px;
    }
  }

  /* Mobile */
  @media (max-width: 600px) {
    .fixed-header {
      padding: 16px 20px;
    }

    main {
      padding: 90px 20px 60px;
    }

    .post-meta h1 {
      font-size: 36px;
      line-height: 1.15;
    }

    .subtitle {
      font-size: 18px;
    }

    .content {
      font-size: 16px;
    }

    .content h2 {
      font-size: 26px;
      margin: 40px 0 20px 0;
    }

    .content h3 {
      font-size: 20px;
    }

    .content blockquote {
      padding-left: 16px;
      margin: 24px 0;
    }
  }
</style>

<script>
  // Make all external links in post content open in new tabs
  document.addEventListener("DOMContentLoaded", function () {
    const contentLinks = document.querySelectorAll('.content a[href^="http"]')
    contentLinks.forEach((link) => {
      const href = link.getAttribute("href")
      if (href && !href.includes("robertritz.com")) {
        link.setAttribute("target", "_blank")
        link.setAttribute("rel", "noopener noreferrer")
      }
    })
  })
</script>
