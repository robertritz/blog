---
import BaseHead from "../components/BaseHead.astro"
import SystemTheme from "../components/SystemTheme.astro"
import { siteConfig } from "../config"
import { getCollection } from "astro:content"

const posts = (await getCollection("posts")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
)
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={`Archive | ${siteConfig.siteName}`}
      description="All posts"
    />
  </head>
  <body>
    <SystemTheme />
    <main>
      <!-- Header -->
      <header class="page-header">
        <div class="author-info">
          <img src="/avatar.png" alt="Robert Ritz" class="avatar" />
          <span class="name">Robert Ritz</span>
        </div>
        <a href="/" class="home-link">‚Üê Home</a>
      </header>

      <h1>All Posts</h1>

      <div class="posts">
        {
          posts.map((post) => (
            <article class="post-item">
              <time>
                {new Date(post.data.pubDate).toLocaleDateString("en-US", {
                  year: "numeric",
                  month: "long",
                  day: "numeric",
                })}
              </time>
              <h2>
                <a href={`/posts/${post.slug}/`}>{post.data.title}</a>
              </h2>
              {post.data.description && (
                <p class="excerpt">{post.data.description}</p>
              )}
            </article>
          ))
        }
      </div>
    </main>
  </body>
</html>

<style>
  body {
    font-family:
      -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue",
      Arial, sans-serif;
    line-height: 1.6;
    color: #111;
    background: #fff;
    margin: 0;
    padding: 0;
    transition:
      color 0.2s ease,
      background-color 0.2s ease;
  }

  [data-theme="dark"] body {
    color: #f5f5f5;
    background: #0a0a0a;
  }

  main {
    max-width: 800px;
    margin: 0 auto;
    padding: 40px 20px;
  }

  .page-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 40px;
    padding-bottom: 20px;
    border-bottom: 1px solid #eee;
  }

  [data-theme="dark"] .page-header {
    border-bottom-color: #333;
  }

  .author-info {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
  }

  .name {
    font-weight: 600;
    font-size: 16px;
  }

  [data-theme="dark"] .name {
    color: #f5f5f5;
  }

  .home-link {
    color: #666;
    text-decoration: none;
    font-size: 14px;
  }

  [data-theme="dark"] .home-link {
    color: #999;
  }

  .home-link:hover {
    color: #111;
    text-decoration: underline;
  }

  [data-theme="dark"] .home-link:hover {
    color: #f5f5f5;
  }

  h1 {
    font-size: 36px;
    font-weight: 700;
    margin: 0 0 40px 0;
    color: #111;
  }

  [data-theme="dark"] h1 {
    color: #f5f5f5;
  }

  .posts {
    margin-bottom: 40px;
  }

  .post-item {
    margin-bottom: 40px;
    padding-bottom: 40px;
    border-bottom: 1px solid #eee;
  }

  [data-theme="dark"] .post-item {
    border-bottom-color: #333;
  }

  .post-item:last-child {
    border-bottom: none;
  }

  .post-item time {
    font-size: 14px;
    color: #666;
    display: block;
    margin-bottom: 8px;
  }

  [data-theme="dark"] .post-item time {
    color: #999;
  }

  .post-item h2 {
    font-size: 24px;
    font-weight: 600;
    margin: 0 0 12px 0;
    line-height: 1.3;
  }

  .post-item h2 a {
    color: #111;
    text-decoration: none;
  }

  [data-theme="dark"] .post-item h2 a {
    color: #f5f5f5;
  }

  .post-item h2 a:hover {
    text-decoration: underline;
  }

  .excerpt {
    font-size: 16px;
    color: #666;
    margin: 0;
    line-height: 1.5;
  }

  [data-theme="dark"] .excerpt {
    color: #999;
  }

  @media (max-width: 768px) {
    main {
      padding: 20px;
    }

    .page-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 16px;
    }

    h1 {
      font-size: 28px;
    }

    .post-item h2 {
      font-size: 20px;
    }
  }
</style>
