---
import BaseHead from "../components/BaseHead.astro"
import SiteHeader from "../components/SiteHeader.astro"
import { siteConfig } from "../config"
import { getCollection } from "astro:content"

const posts = (await getCollection("posts")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
)
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={`Archive | ${siteConfig.siteName}`}
      description="All posts"
    />
  </head>
  <body>
    <main>
      <SiteHeader />

      <h1>All Posts</h1>

      <div class="posts">
        {
          posts.map((post) => (
            <article class="post-item">
              <time>
                {new Date(post.data.pubDate).toLocaleDateString("en-US", {
                  year: "numeric",
                  month: "long",
                })}
              </time>
              <h2>
                <a href={`/posts/${post.slug}/`}>{post.data.title}</a>
              </h2>
              {post.data.description && (
                <p class="excerpt">{post.data.description}</p>
              )}
            </article>
          ))
        }
      </div>
    </main>
  </body>
</html>

<style>
  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  body {
    font-family:
      "Inter",
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      sans-serif;
    line-height: 1.6;
    color: #1f1e1d;
    background: #fafafa;
    margin: 0;
    padding: 0;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    overflow-x: hidden;
    width: 100%;
  }

  :global([data-theme="dark"]) body {
    color: #e5e5e5;
    background: #1a1a1a;
  }

  main {
    width: 100%;
    max-width: 640px;
    margin: 0 auto;
    padding: 60px 24px;
    overflow-wrap: break-word;
    word-wrap: break-word;
  }

  h1 {
    font-family:
      "Inter",
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      sans-serif;
    font-size: 32px;
    font-weight: 700;
    margin: 0 0 40px 0;
    color: #1f1e1d;
  }

  :global([data-theme="dark"]) h1 {
    color: #f5f5f5;
  }

  .posts {
    margin-bottom: 40px;
  }

  .post-item {
    margin-bottom: 32px;
    padding-bottom: 32px;
    border-bottom: 1px solid #ddd;
  }

  :global([data-theme="dark"]) .post-item {
    border-bottom-color: #333;
  }

  .post-item:last-child {
    border-bottom: none;
  }

  .post-item time {
    font-size: 14px;
    color: #666;
    display: block;
    margin-bottom: 8px;
  }

  :global([data-theme="dark"]) .post-item time {
    color: #888;
  }

  .post-item h2 {
    font-family:
      "Inter",
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      sans-serif;
    font-size: 22px;
    font-weight: 700;
    margin: 0 0 8px 0;
    line-height: 1.3;
  }

  .post-item h2 a {
    color: #1f1e1d;
    text-decoration: none;
  }

  :global([data-theme="dark"]) .post-item h2 a {
    color: #f5f5f5;
  }

  .post-item h2 a:hover {
    text-decoration: underline;
  }

  .excerpt {
    font-size: 16px;
    color: #666;
    margin: 0;
    line-height: 1.5;
  }

  :global([data-theme="dark"]) .excerpt {
    color: #888;
  }

  @media (max-width: 600px) {
    main {
      padding: 40px 20px;
    }

    h1 {
      font-size: 28px;
    }

    .post-item h2 {
      font-size: 20px;
    }
  }
</style>
