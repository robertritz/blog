---
import BaseHead from "../components/BaseHead.astro"
import SiteHeader from "../components/SiteHeader.astro"
import { siteConfig } from "../config"
import { getCollection } from "astro:content"

const posts = (await getCollection("posts"))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 5)
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={siteConfig.siteName}
      description={siteConfig.meta.description}
    />
  </head>
  <body>
    <main>
      <SiteHeader showNav={false} />

      <section class="bio">
        <p>
          Data scientist, builder, and accidental Mongolian. I moved to
          Ulaanbaatar over a decade ago and now run a university, co-founded a
          furniture company, and build tools to make Mongolia's data accessible.
        </p>
      </section>

      <section class="projects" id="projects">
        <h2>Projects</h2>

        <div class="featured-project">
          <h3>Mongolia Newsletter</h3>
          <p class="project-desc">Weekly digest of Mongolian news, politics, and economics.</p>
          <a href="https://mongolia.robertritz.com" class="project-link" target="_blank" rel="noopener noreferrer">mongolia.robertritz.com &rarr;</a>
        </div>

        <div class="featured-project">
          <h3>Data.mn</h3>
          <p class="project-desc">Making Mongolia's data accessible and searchable.</p>
          <a href="https://data.mn" class="project-link" target="_blank" rel="noopener noreferrer">data.mn &rarr;</a>
        </div>

        <p class="roles">Also: President of AUM &middot; Co-founder, Precision Kraft</p>
      </section>

      <section class="writing" id="writing">
        <h2>Writing</h2>
        <ul class="posts-list">
          {posts.map((post) => (
            <li>
              <a href={`/posts/${post.slug}/`}>{post.data.title}</a>
              <time>
                {new Date(post.data.pubDate).toLocaleDateString("en-US", {
                  year: "numeric",
                  month: "short",
                })}
              </time>
            </li>
          ))}
        </ul>
        <a href="/archive" class="see-all">See all &rarr;</a>
      </section>

      <footer class="site-footer">
        <a href="https://x.com/RobertERitz" target="_blank" rel="noopener noreferrer">X</a>
        <span class="separator">&middot;</span>
        <a href="mailto:robert@aum.edu.mn">Email</a>
        <span class="separator">&middot;</span>
        <a href="/rss.xml">RSS</a>
      </footer>
    </main>
  </body>
</html>

<style>
  *, *::before, *::after {
    box-sizing: border-box;
  }

  body {
    font-family: "Inter", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
    line-height: 1.7;
    color: #1f1e1d;
    background: #fafafa;
    margin: 0;
    padding: 0;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  [data-theme="dark"] body {
    color: #e5e5e5;
    background: #1a1a1a;
  }

  main {
    width: 100%;
    max-width: 640px;
    margin: 0 auto;
    padding: 60px 24px;
  }

  /* Bio */
  .bio {
    margin-bottom: 48px;
  }

  .bio p {
    font-size: 17px;
    line-height: 1.7;
    margin: 0;
    color: #1f1e1d;
  }

  [data-theme="dark"] .bio p {
    color: #bbb;
  }

  /* Projects */
  .projects {
    margin-bottom: 48px;
  }

  .projects h2 {
    font-family: "Inter", -apple-system, BlinkMacSystemFont, sans-serif;
    font-size: 14px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: #6b7280;
    margin: 0 0 24px 0;
  }

  [data-theme="dark"] .projects h2 {
    color: #9ca3af;
  }

  .featured-project {
    margin-bottom: 24px;
  }

  .featured-project h3 {
    font-family: "Inter", -apple-system, BlinkMacSystemFont, sans-serif;
    font-size: 17px;
    font-weight: 700;
    margin: 0 0 4px 0;
    color: #1f1e1d;
  }

  [data-theme="dark"] .featured-project h3 {
    color: #e5e5e5;
  }

  .project-desc {
    font-size: 15px;
    color: #6b7280;
    margin: 0 0 4px 0;
    line-height: 1.5;
  }

  [data-theme="dark"] .project-desc {
    color: #9ca3af;
  }

  .project-link {
    font-size: 15px;
    color: #6b7280;
    text-decoration: underline;
    text-underline-offset: 3px;
    text-decoration-color: #d1d5db;
  }

  .project-link:hover {
    color: #1f1e1d;
    text-decoration-color: #1f1e1d;
  }

  [data-theme="dark"] .project-link {
    color: #9ca3af;
    text-decoration-color: #4b5563;
  }

  [data-theme="dark"] .project-link:hover {
    color: #e5e5e5;
    text-decoration-color: #e5e5e5;
  }

  .roles {
    font-size: 15px;
    color: #6b7280;
    font-style: italic;
    margin: 32px 0 0 0;
  }

  [data-theme="dark"] .roles {
    color: #9ca3af;
  }

  /* Writing */
  .writing {
    margin-bottom: 48px;
  }

  .writing h2 {
    font-family: "Inter", -apple-system, BlinkMacSystemFont, sans-serif;
    font-size: 14px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: #6b7280;
    margin: 0 0 24px 0;
  }

  [data-theme="dark"] .writing h2 {
    color: #9ca3af;
  }

  .posts-list {
    list-style: none;
    padding: 0;
    margin: 0 0 16px 0;
  }

  .posts-list li {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    gap: 16px;
    padding: 8px 0;
  }

  .posts-list a {
    color: #1f1e1d;
    text-decoration: none;
    font-size: 17px;
  }

  [data-theme="dark"] .posts-list a {
    color: #e5e5e5;
  }

  .posts-list a:hover {
    text-decoration: underline;
    text-underline-offset: 3px;
  }

  .posts-list time {
    font-size: 14px;
    color: #6b7280;
    white-space: nowrap;
    flex-shrink: 0;
  }

  [data-theme="dark"] .posts-list time {
    color: #9ca3af;
  }

  .see-all {
    color: #6b7280;
    text-decoration: none;
    font-size: 14px;
  }

  [data-theme="dark"] .see-all {
    color: #9ca3af;
  }

  .see-all:hover {
    text-decoration: underline;
  }

  /* Footer */
  .site-footer {
    font-size: 14px;
    color: #6b7280;
    padding-top: 16px;
  }

  .site-footer a {
    color: #1f1e1d;
    text-decoration: none;
  }

  [data-theme="dark"] .site-footer a {
    color: #e5e5e5;
  }

  .site-footer a:hover {
    text-decoration: underline;
  }

  .separator {
    margin: 0 10px;
    color: #d1d5db;
  }

  [data-theme="dark"] .separator {
    color: #4b5563;
  }

  /* Mobile */
  @media (max-width: 600px) {
    main {
      padding: 40px 20px;
    }

    .bio p {
      font-size: 16px;
    }

    .posts-list a {
      font-size: 16px;
    }

    .posts-list li {
      flex-direction: column;
      gap: 2px;
    }
  }
</style>
