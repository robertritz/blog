---
import BaseHead from "../components/BaseHead.astro"
import SystemTheme from "../components/SystemTheme.astro"
import { siteConfig } from "../config"
import { getCollection } from "astro:content"

const posts = (await getCollection("posts"))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, siteConfig.latestPosts)
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={siteConfig.siteName}
      description="Data scientist and builder based in Mongolia. President of AUM, co-founder of Precision Kraft, building Data.mn."
    />
  </head>
  <body>
    <main>
      <header class="site-header">
        <h1>Robert Ritz</h1>
        <SystemTheme />
      </header>

      <div class="bio">
        <input type="checkbox" id="bio-toggle" class="bio-checkbox" />
        <p class="bio-text">
          Data scientist, builder, and accidental Mongolian. I moved to
          Ulaanbaatar over a decade ago and found a life I never expectedâ€”a
          country of vast landscapes, resilient people, and endless
          opportunity to build something meaningful.
          <span class="bio-more">
            Today I serve as President of the American University of Mongolia,
            co-founded Precision Kraft (custom furniture manufacturing), and I'm building
            Data.mn to bring better statistics and insights to Mongolia.
            Inspired daily by my wife Bayaraa and son Erin.
          </span>
        </p>
        <label for="bio-toggle" class="bio-toggle-label">
          <span class="show-more">...More</span>
          <span class="show-less">Less</span>
        </label>
      </div>

      <section class="writing">
        <h2>Writing</h2>
        <ul class="posts-list">
          {posts.map((post) => (
            <li>
              <a href={`/posts/${post.slug}/`}>{post.data.title}</a>
            </li>
          ))}
        </ul>
        <a href="/archive" class="see-all">See all &rarr;</a>
      </section>

      <footer class="site-footer">
        <a href="https://x.com/RobertERitz" target="_blank" rel="noopener noreferrer">X</a>
        <span class="separator">&middot;</span>
        <a href="mailto:robert@aum.edu.mn">Email</a>
      </footer>
    </main>
  </body>
</html>

<style>
  *, *::before, *::after {
    box-sizing: border-box;
  }

  body {
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
    line-height: 1.7;
    color: #1f1e1d;
    background: #f0eee6;
    margin: 0;
    padding: 0;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    overflow-x: hidden;
    width: 100%;
  }

  [data-theme="dark"] body {
    color: #e5e5e5;
    background: #1a1a1a;
  }

  main {
    width: 100%;
    max-width: 600px;
    margin: 0 auto;
    padding: 60px 24px;
    overflow-wrap: break-word;
    word-wrap: break-word;
  }

  .site-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 40px;
  }

  h1 {
    font-family: "Times New Roman", Times, Georgia, serif;
    font-size: 24px;
    font-weight: 700;
    margin: 0;
    color: #1f1e1d;
  }

  [data-theme="dark"] h1 {
    color: #e5e5e5;
  }

  .bio {
    margin-bottom: 48px;
  }

  .bio-checkbox {
    display: none;
  }

  .bio-text {
    font-size: 17px;
    line-height: 1.7;
    margin: 0;
    color: #1f1e1d;
  }

  [data-theme="dark"] .bio-text {
    color: #bbb;
  }

  .bio a {
    color: #1f1e1d;
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  [data-theme="dark"] .bio a {
    color: #e5e5e5;
  }

  .bio a:hover {
    text-decoration-thickness: 2px;
  }

  /* Bio expand/collapse - mobile only */
  .bio-more {
    display: inline;
  }

  .bio-toggle-label {
    display: none;
  }

  @media (max-width: 600px) {
    .bio-more {
      display: none;
    }

    .bio-toggle-label {
      display: inline;
      color: #888;
      cursor: pointer;
      font-size: 17px;
    }

    [data-theme="dark"] .bio-toggle-label {
      color: #888;
    }

    .bio-toggle-label:hover {
      text-decoration: underline;
    }

    .show-less {
      display: none;
    }

    .bio-checkbox:checked ~ .bio-text .bio-more {
      display: inline;
    }

    .bio-checkbox:checked ~ .bio-toggle-label .show-more {
      display: none;
    }

    .bio-checkbox:checked ~ .bio-toggle-label .show-less {
      display: inline;
    }
  }

  .writing {
    margin-bottom: 48px;
  }

  .writing h2 {
    font-family: "Times New Roman", Times, Georgia, serif;
    font-size: 20px;
    font-weight: 700;
    margin: 0 0 20px 0;
    color: #1f1e1d;
  }

  [data-theme="dark"] .writing h2 {
    color: #e5e5e5;
  }

  .posts-list {
    list-style: disc;
    padding-left: 20px;
    margin: 0 0 16px 0;
  }

  .posts-list li {
    margin: 8px 0;
    color: #888;
  }

  [data-theme="dark"] .posts-list li {
    color: #888;
  }

  .posts-list a {
    color: #1f1e1d;
    text-decoration: none;
    font-size: 17px;
  }

  [data-theme="dark"] .posts-list a {
    color: #e5e5e5;
  }

  .posts-list a:hover {
    text-decoration: underline;
  }

  .see-all {
    color: #888;
    text-decoration: none;
    font-size: 15px;
  }

  [data-theme="dark"] .see-all {
    color: #888;
  }

  .see-all:hover {
    text-decoration: underline;
  }

  .site-footer {
    font-size: 15px;
    color: #888;
  }

  [data-theme="dark"] .site-footer {
    color: #888;
  }

  .site-footer a {
    color: #1f1e1d;
    text-decoration: none;
  }

  [data-theme="dark"] .site-footer a {
    color: #e5e5e5;
  }

  .site-footer a:hover {
    text-decoration: underline;
  }

  .separator {
    margin: 0 12px;
    color: #ccc;
  }

  [data-theme="dark"] .separator {
    color: #555;
  }

  @media (max-width: 600px) {
    main {
      padding: 40px 20px;
    }

    h1 {
      font-size: 28px;
    }

    .bio-text {
      font-size: 16px;
    }

    .posts-list a {
      font-size: 16px;
    }
  }
</style>
