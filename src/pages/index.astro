---
import BaseHead from "../components/BaseHead.astro"
import Bio from "../components/Bio.astro"
import SystemTheme from "../components/SystemTheme.astro"
import { siteConfig } from "../config"
import { getCollection } from "astro:content"

const posts = (await getCollection("posts"))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, siteConfig.latestPosts)
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={siteConfig.siteName}
      description={siteConfig.meta.description}
    />
  </head>
  <body>
    <SystemTheme />
    <main>
      <!-- Author Section -->
      <div class="author">
        <img src="/avatar.png" alt="Robert Ritz" class="avatar" />
        <h1>Robert Ritz</h1>
        <div class="bio">
          <Bio />
        </div>
      </div>

      <!-- Subscription -->
      <div class="subscription">
        <p>
          Subscribe via <a href="/rss.xml">RSS</a>
        </p>
      </div>

      <!-- Posts -->
      <div class="posts">
        {
          posts.map((post) => (
            <article class="post-item">
              <time>
                {new Date(post.data.pubDate).toLocaleDateString("en-US", {
                  year: "numeric",
                  month: "long",
                  day: "numeric",
                })}
              </time>
              <h2>
                <a href={`/posts/${post.slug}/`}>{post.data.title}</a>
              </h2>
              {post.data.description && (
                <p class="excerpt">{post.data.description}</p>
              )}
            </article>
          ))
        }
      </div>

      <div class="archive-link">
        <a href="/archive/">See all posts</a>
      </div>
    </main>
  </body>
</html>

<style>
  body {
    font-family:
      -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue",
      Arial, sans-serif;
    line-height: 1.6;
    color: #111;
    background: #fff;
    margin: 0;
    padding: 0;
    transition:
      color 0.2s ease,
      background-color 0.2s ease;
  }

  [data-theme="dark"] body {
    color: #f5f5f5;
    background: #0a0a0a;
  }

  main {
    max-width: 800px;
    margin: 0 auto;
    padding: 60px 20px;
  }

  .author {
    text-align: center;
    margin-bottom: 40px;
  }

  .author .bio {
    font-size: 18px;
    margin-top: 20px;
    line-height: 1.6;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .author .bio p {
    margin: 0 0 16px 0;
  }

  .author .bio a {
    color: #111;
    text-decoration: underline;
  }

  [data-theme="dark"] .author .bio a {
    color: #f5f5f5;
  }

  .avatar {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    margin-bottom: 16px;
  }

  .author h1 {
    font-size: 28px;
    font-weight: 600;
    margin: 0;
    color: #111;
  }

  [data-theme="dark"] .author h1 {
    color: #f5f5f5;
  }

  .subscription {
    text-align: center;
    margin-bottom: 60px;
    font-size: 16px;
  }

  .subscription a {
    color: #111;
    text-decoration: underline;
  }

  [data-theme="dark"] .subscription a {
    color: #f5f5f5;
  }

  .posts {
    margin-bottom: 40px;
  }

  .post-item {
    margin-bottom: 40px;
    padding-bottom: 40px;
    border-bottom: 1px solid #eee;
  }

  [data-theme="dark"] .post-item {
    border-bottom-color: #333;
  }

  .post-item:last-child {
    border-bottom: none;
  }

  .post-item time {
    font-size: 14px;
    color: #666;
    display: block;
    margin-bottom: 8px;
  }

  [data-theme="dark"] .post-item time {
    color: #999;
  }

  .post-item h2 {
    font-size: 24px;
    font-weight: 600;
    margin: 0 0 12px 0;
    line-height: 1.3;
  }

  .post-item h2 a {
    color: #111;
    text-decoration: none;
  }

  [data-theme="dark"] .post-item h2 a {
    color: #f5f5f5;
  }

  .post-item h2 a:hover {
    text-decoration: underline;
  }

  .excerpt {
    font-size: 16px;
    color: #666;
    margin: 0;
    line-height: 1.5;
  }

  [data-theme="dark"] .excerpt {
    color: #999;
  }

  .archive-link {
    text-align: center;
    margin-top: 40px;
  }

  .archive-link a {
    color: #111;
    text-decoration: underline;
    font-size: 16px;
  }

  [data-theme="dark"] .archive-link a {
    color: #f5f5f5;
  }

  @media (max-width: 768px) {
    main {
      padding: 40px 20px;
    }

    .bio {
      font-size: 16px;
    }

    .author h1 {
      font-size: 24px;
    }

    .post-item h2 {
      font-size: 20px;
    }
  }
</style>
