---
import type { Language } from "../i18n/config"
import { languageLabels } from "../i18n/config"
import { getOtherLanguage } from "../i18n/utils"

interface Props {
  currentLang: Language
  currentPath?: string
}

const { currentLang, currentPath = "" } = Astro.props
const otherLang = getOtherLanguage(currentLang)

// Construct the other language URL
// If currentPath is provided, try to navigate to the same path in the other language
// Otherwise, just go to the homepage of the other language
const otherLangPath = currentPath
  ? `/${otherLang}/${currentPath}`
  : `/${otherLang}/`
---

<div class="language-switcher">
  <a
    href={`/${currentLang}/`}
    class={currentLang === "en" ? "active" : ""}
    aria-current={currentLang === "en" ? "page" : undefined}
  >
    {languageLabels.en}
  </a>
  <span class="separator">|</span>
  <a
    href={`/${otherLang}/`}
    class={currentLang === otherLang ? "active" : ""}
    aria-current={currentLang === otherLang ? "page" : undefined}
  >
    {languageLabels[otherLang]}
  </a>
</div>

<style>
  .language-switcher {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
  }

  .language-switcher a {
    color: inherit;
    text-decoration: none;
    opacity: 0.6;
    transition: opacity 0.2s;
  }

  .language-switcher a:hover {
    opacity: 1;
  }

  .language-switcher a.active {
    opacity: 1;
    font-weight: 600;
  }

  .separator {
    opacity: 0.3;
  }
</style>
